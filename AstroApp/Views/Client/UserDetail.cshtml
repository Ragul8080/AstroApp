@model AstroApp.Models.ClientModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Details</title>

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="bg-light text-dark" style="width: 100%; height: 100%;">

    <div class="container-fluid py-5">

        <!-- Header -->
        <div class="row align-items-center mb-4">
            <div class="col-md-8">
                <div class="search-box">
                    <h1 class="page-title">Clients Details</h1>
                </div>
            </div>
        </div>

        <div class="row g-4">

            <!-- LEFT SECTION -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm bg-white h-100 p-4 rounded-4">

                    <!-- Profile Header -->
                    <div class="d-flex align-items-center mb-4 justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary rounded-circle d-flex justify-content-center align-items-center" style="width:60px; height:60px;">
                                <i class="bi bi-person-fill fs-3 text-white"></i>
                            </div>
                            <div class="ms-3">
                                <h5 class="mb-0 fw-bold">@($"{Model.FirstName} {Model.LastName}")</h5>
                                <div class="text-muted">
                                    <i class="bi bi-gem text-primary me-1"></i>
                                    @* Replace with actual Zodiac name if needed *@
                                    @Model.ZodiacSignId
                                </div>
                            </div>
                        </div>
                        <div class="d-flex">
                            <button id="editbtn" class="btn btn-secondary btn-sm me-2"><i class="bi bi-pencil"></i> Edit</button>
                            <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                        </div>
                    </div>

                    <!-- CLIENT INFORMATION -->
                    <h6 class="text-uppercase text-muted">Client Information</h6>
                    <div class="row mb-4">

                        <div class="col-md-6 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-star me-2"></i>Zodiac Sign</div>
                                <div class="fw-semibold">@Model.ZodiacEng</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-star-half me-2"></i>Star</div>
                                <div class="fw-semibold">@Model.StarEng</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-calendar-event me-2"></i>Date of Birth</div>
                                <div class="fw-semibold">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-clock me-2"></i>Birth Time</div>
                                <div class="fw-semibold">@Model.BirthTime</div>
                            </div>
                        </div>
                    </div>

                    <!-- CONTACT INFORMATION -->
                    <h6 class="text-uppercase text-muted">Contact Information</h6>
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-envelope me-2"></i>Email</div>
                                <div class="fw-semibold">@Model.Email</div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-telephone me-2"></i>Phone</div>
                                <div class="fw-semibold">@Model.Phone</div>
                            </div>
                        </div>
                    </div>

                    <!-- ADDRESS -->
                    <h6 class="text-uppercase text-muted">Address</h6>
                    <div class="row mb-4">
                        <div class="col-12 mb-3">
                            <div class="bg-light border p-3 rounded">
                                <div class="small text-muted mb-1"><i class="bi bi-geo-alt me-2"></i>Address</div>
                                <div class="fw-semibold">
                                    @Model.AddressLine1,<br />
                                    @Model.AddressLine2,<br />
                                    @Model.City,<br />
                                    @Model.State, @Model.ZipCode
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ADDITIONAL INFORMATION -->
                    <h6 class="text-uppercase text-muted">Additional Information</h6>
                    <div class="bg-light border p-3 rounded mb-3">
                        <div class="small text-muted mb-1"><i class="bi bi-journal-text me-2"></i>Notes</div>
                        <div class="fw-normal text-dark">@Model.Note</div>
                    </div>

                </div>
            </div>

            <!-- RIGHT SECTION -->
            <div class="col-lg-4">
                <div class="card border-0 shadow-sm bg-white p-4 rounded-4 h-100">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0">Appointment History</h5>
                    </div>

                    <div class="text-muted small mb-3">Past sessions and readings</div>

                    <div class="mb-4">
                        <div class="small text-muted mb-1">Last Visit</div>
                        <div class="fw-semibold text-primary">2025-01-15</div>
                    </div>

                    <div class="list-group bg-transparent">
                        <div class="list-group-item border rounded mb-2 d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">Birth Chart Reading</div>
                                <small class="text-muted">2025-01-15</small>
                            </div>
                            <span class="badge bg-success">Completed</span>
                        </div>

                        <div class="list-group-item border rounded mb-2 d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">Transit Analysis</div>
                                <small class="text-muted">2024-12-10</small>
                            </div>
                            <span class="badge bg-success">Completed</span>
                        </div>

                        <div class="list-group-item border rounded mb-4 d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">Compatibility Reading</div>
                                <small class="text-muted">2024-11-05</small>
                            </div>
                            <span class="badge bg-success">Completed</span>
                        </div>
                    </div>

                    <button class="btn btn-primary w-100 rounded-pill mt-auto">Schedule New Session</button>

                </div>
            </div>

        </div>
    </div>
    <input type="hidden" id="clientId" value="@Model.ClientId" />
    <input type="hidden" id="editUrl" value="@Url.Action("EditUser", "Client")" />
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Client/Details.js"></script>
</body>
</html>
