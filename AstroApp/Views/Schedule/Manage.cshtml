@{
    ViewData["Title"] = "Clients";
}

<input type="hidden" id="clientUrl" value="@Url.Action("GetClients", "ScheduleApi")" />

<div class="container-fluid clients-page">
    <div class="row">
        <div class="col-12">
            <h1 class="page-title">Schedule</h1>
        </div>
    </div>

    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <div class="search-box">
                <input type="text" class="form-control search-input" placeholder="Search by name or zodiac sign...">
            </div>
        </div>
        <div class="col-md-4 text-end">
            <button class="purpulbtn" id="CreateUser">
                <i class="bi bi-plus-lg"></i> Add New Client
            </button>
        </div>
    </div>


    <div id="clientCards" class="row g-4">
        <!-- Dynamic cards will load here -->
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}

@section Scripts {
    <script src="~/js/Schedule/manage.js"></script>
}
